<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/tileCover"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"/>

        <FrameLayout
            android:id="@+id/littleLabel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/opacityblack"
            android:layout_gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/serieTitle"
                android:textSize="13sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:autoSizeTextType="uniform"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UnusedAttribute" />
            <TextView
                android:id="@+id/serieCategories"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>

    <RelativeLayout
        android:id="@+id/itemDetails"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:gravity="center"
        android:background="@color/opacityblack">
        <TextView
            android:id="@+id/bigTitle"
            android:textSize="26sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/tileRating"
            android:layout_below="@id/bigTitle"
            android:layout_width="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:stepSize="0.1"
            android:numStars="5"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tileDescription"
            android:layout_below="@id/tileRating"
            android:textSize="14sp"
            android:textAlignment="center"
            android:justificationMode="inter_word"
            android:textColor="#FFF"
            android:maxEms="300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </RelativeLayout>
